# ===========================================
# BizSkill Production Environment Variables
# ===========================================
# Copy this file to .env.production and fill in your values

# Domain & URLs
DOMAIN=yourdomain.com
API_URL=https://yourdomain.com

# Database
POSTGRES_USER=bizskill
POSTGRES_PASSWORD=your-super-strong-password-here
POSTGRES_DB=bizskill

# Redis
REDIS_PASSWORD=your-redis-password-here

# Security (Generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-key

# Anthropic API Key
ANTHROPIC_API_KEY=

# YouTube Data API Key
YOUTUBE_API_KEY=your-youtube-api-key

# Cloudinary (for video clips storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_FOLDER=bizskill/segments

# Local Models Configuration
USE_LOCAL_EMBEDDING=true
USE_LOCAL_WHISPER=true
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DIM=1024
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
