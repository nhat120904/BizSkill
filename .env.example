# Environment Variables for BizSkill AI
# Copy this file to .env and fill in your values

# API Keys (Required)
OPENAI_API_KEY=your_openai_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# Security
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars

# Database (defaults work with docker-compose)
DATABASE_URL=postgresql://bizskill:bizskill_secret@localhost:5432/bizskill

# Redis (defaults work with docker-compose)
REDIS_URL=redis://localhost:6379/0

# Qdrant (defaults work with docker-compose)
QDRANT_URL=http://localhost:6333

# Optional: LLM Configuration
LLM_PROVIDER=openai  # or anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Whisper Configuration
WHISPER_MODEL=whisper-1  # or local model path for self-hosted

# Cloudinary (Required for video clip hosting)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_FOLDER=bizskill/segments
